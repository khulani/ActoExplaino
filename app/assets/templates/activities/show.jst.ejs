<div id='activity-show' class='col-xs-9'>
  <div class='row'>
    <div class='col-xs-6 title'>
      <div ><h3 id='show-title'><%= activity.escape('title') %></h3></div>
    </div>
    <div class='col-xs-6 title'>
      <div >
        <h3 id='match-title'></h3>
        <div id='match-user'></div>
      </div>
    </div>
  </div>
  <div class="timeline-window">
    <div class="occurrence-new triangle-border left closed">
      <div class='errors'></div>
      <form id='add'>
        <input type="hidden" name="activity_id"
          value="<%= activity.id %>">
        <div class="form-group">
          <input id="new-date" type="date" name="occurrence[date]" value="">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="occurrence[body]"
            placeholder="Enter description..."></textarea>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="occurrence[image]"
            placeholder="Enter picture..." value="">
        </div>
        <input class="btn btn-success" id="add-submit" type="submit" value="Add Occurrence">
        <button class="btn btn-warning btn-xs" id="add-cancel">Cancel</button>
      </form>
    </div>
    <div class="timeline-window-inner">
      <div class='timeline-buttons'>
        <button class='btn btn-default btn-xs' id='open-all'>+</button>
        <button class='btn btn-default btn-xs' id='add-new'>NEW</button>
      </div>
      <div class='timeline-bar'>
        <div class='timeline-top'></div>
        <div class='occurrences'>
          
        </div>
        <div class='timeline-bot'></div>
      </div>
    </div>
    <div class="scroll scroll-up"><div class='arrow-up'></div></div>
    <div class="scroll scroll-down"><div class='arrow-down'></div></div>
  </div>
</div>
<div class='col-xs-3 match-panel'>
  <h4>Matches:</h4>
  <div id="name"></div>
  <div id='match-list'></div>
</div>
